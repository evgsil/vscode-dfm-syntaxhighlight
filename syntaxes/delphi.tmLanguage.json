{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Delphi",
	"fileTypes": [
		"source.dfm"
	],
	"firstLineMatch": "^object\\s+\\w{1}\\s*:\\s*\\w$",
	"foldingStartMarker": "^object\\s+\\w{1}\\s*:\\s*\\w$",
	"foldingStopMarker": "^end$",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#entities"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.object.dfm",
				"match": "\\b(object|end)\\b"
			}]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.dfm",
					"match": "\\W\\d+"
				},
				{
					"name": "constant.language.dfm",
					"match": "\\b([Tt]rue|[Ff]alse)\\b"
				},
				{
					"name": "string.quoted.single.dfm",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"match": ".*"
						}
					]
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"match": "(\\w+):\\s+(\\w+)",
					"captures": {
						"1": {
							"name": "variable.parameter.dfm"
						},
						"2": {
							"name": "entity.name.type.dfm"
						}  
					}
				}
			]
		}
	},
	"scopeName": "source.dfm"
}